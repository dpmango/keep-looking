                    .col-sm-6.col-lg-4
                        a(href="#").category__item
                            figure.category__item-image
                                img(src="img/img-category-4.jpg", alt="")
                            .category__item-caption КОСМЕТИКА
                    .col-sm-6.col-lg-4
                        a(href="#").category__item
                            figure.category__item-image
                                img(src="img/img-category-5.jpg", alt="")
